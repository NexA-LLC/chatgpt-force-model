{
  "manifest_version": 3,
  "name": "ChatGPT Model Selector",
  "version": "1.3",
  "description": "Automatically append model parameter to ChatGPT URLs",
  "permissions": [
    "storage",
    "webNavigation",
    "cookies"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["shared.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
